<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sreejithsnair.instacart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/ic_instacart_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_instacart_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instacart">
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainActivity"></activity>
    </application>

</manifest>